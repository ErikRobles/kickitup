<div class="main">
{% for actor in content.field_actors['#items'].getValue() %}
    {{ actor.value }}<br>
{% endfor %}

{% if  content.field_show_poster['#items'].getValue()|first.value == "1" %}
<div class="movie-poster">
<br>
    {{ content.field_movie_poster }}
</div>

{% else %}
    <h3>No movie poster available</h3>
{% endif %}

<div class="director">
    {{ content.field_director }}
</div>
<br>
<br>
<div class="actors">
    {{ content.field_actors }}
</div>
<br>
<br>

<div class="premieres">
    {{ content.field_premiers }}
</div>

<br>

<div class="movie-description">
    {{ content.body }}
</div>
</div><!--end main div-->

